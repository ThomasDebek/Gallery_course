<div class="hero-unit">
  <h1>Galerie</h1>

  <%= link_to 'Dodaj nową galerie', {:action => 'nowa' }, :class => 'btn btn-mini btn-primary' %>

  <p style="text-align: right;">Ilosć galerii: <%= @galeria.size %> </p>


  <table class="table table-striped">
    <tr class="info">
      <th>Nazwa</th>
      <th>Pozycja</th>
      <th>Widoczna</th>
      <th>Akcja</th>
    </tr>
    <% @galeria.each do |galerie| %>
        <tr>
          <td><%= galerie.nazwa %></td>
          <td><%= galerie.pozycja %></td>
          <td class="center"><%= status_widoku(galerie.widoczna) %></td>
          <td class="actions">
            <%= link_to "Show", {:action => 'pokaż', :id => galerie.id}, :class=> 'label label-default' %>
            <%= link_to "Edit",  {:action => 'edycja', :id => galerie.id}, :class=> 'label label-primary' %>
            <%= link_to "Delete",  {:action => 'usun', :id => galerie.id}, :class=> 'label label-danger'%>
          </td>
        </tr>

    <% end %>

  </table>

</div>