<div class="hero-unit">
  <h1>New strona</h1>


  <%= form_for(:strona, :url => {:action => 'utworz', :kategoria_id => @kategorie.id}) do |strona| %>

      <%= render(:partial => "form", :locals => {:pole => strona }) %>

      <div style="text-align: center">
        <%= link_to 'Back', {:action => 'index', :kategoria_id => @kategorie.id}, :class => 'btn btn-warning'%>
        <%= submit_tag("Utworz", :class => 'btn btn-primary')%>
      </div>
  <% end %>
</div>