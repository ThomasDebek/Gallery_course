<h1>Kategorie</h1>

<%= link_to 'Dodaj nowa kategorie', {:action=> 'nowa' } %>

<p>Ilosć kategorii: <%= @kategorie.size %> </p>


<table>
  <tr>
    <th>Pozycja</th>
    <th>Nazwa kategorii</th>
    <th>Widoczna</th>
    <th>Strony</th>
    <th>Akcja</th>
  </tr>
<% @kategorie.each do |kategoria| %>
  <tr>
    <th><%= kategoria.pozycja %></th>
    <th><%= kategoria.nazwa %></th>
    <th><%= kategoria.widoczna ? 'Tak' : 'Nie' %></th>
    <th><%= kategoria.stronas.size %></th>
    <th>
      <%= link_to "Show", {:action => 'pokaż', :id => kategoria.id} %>
      <%= link_to "Edit", "#" %>
      <%= link_to "Delete",  {:action => 'usun', :id => kategoria.id}%>

  </tr>

  <% end %>

</table>