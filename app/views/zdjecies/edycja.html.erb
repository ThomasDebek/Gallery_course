<div class="hero-unit">
  <h1>Edycja Zdjecia: <%= @zdjecie.nazwa %></h1>
  <%= form_for(:zdjecie, :url => {:action => 'aktualizuj', :id => @zdjecie.id, :galerie_id => @galerie.id}) do |pole| %>
      <%= render(:partial => "form", :locals => {:pole => pole }) %>
      <div style="text-align: center;">
        <%= link_to 'Back', {:action => 'index', :galerie_id => @galerie.id}, :class => 'btn btn-warning'%>
        <%= submit_tag("aktualizuj", :class => 'btn btn-primary') %>
      </div>
  <% end %>

</div>