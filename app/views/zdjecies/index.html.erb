<div class="hero-unit">
  <%= link_to '<< Powrot do galerii', {:controller => 'galeries', :action => 'index'}, :class => 'btn btn-xs btn-default' %>

  <h1>Zdjecia</h1>

  <%= link_to 'Dodaj nowe zdjecie', {:action => 'nowe', :galerie_id => @galerie.id }, :class => 'btn btn-mini btn-primary' %>

  <p style="text-align: right;">IlosÄ‡ zdjec: <%= @zdjecia.size %> </p>


  <table class="table table-striped">
    <tr class="info">
      <th>Pozycja</th>
      <th>Nazwa</th>
      <th>Zdjecie</th>
      <th>Opis[...}</th>
      <th>Widoczne</th>
      <th>akcja</th>
    </tr>
    <% @zdjecia.each do |zdjecie| %>
        <tr>
          <td><%= zdjecie.pozycja %></td>
          <td><%= zdjecie.nazwa %></td>
          <td><%= image_tag zdjecie.zdjecie.url(:thumb) %></td>
          <td><%= truncate(zdjecie.opis, :length=>50, :omission => "[...]") %></td>
          <td class="center"><%= status_widoku(zdjecie.widoczne) %></td>
          <td class="actions">
            <%= link_to "Show", {:action => 'pokaz', :id => zdjecie.id, :galerie_id => @galerie.id}, :class=> 'label label-default' %>
            <%= link_to "Edit",  {:action => 'edycja', :id => zdjecie.id, :galerie_id => @galerie.id}, :class=> 'label label-primary' %>
            <%= link_to "Delete",  {:action => 'usun', :id => zdjecie.id, :galerie_id => @galerie.id}, :class=> 'label label-danger'%>
          </td>
        </tr>

    <% end %>

  </table>

</div>