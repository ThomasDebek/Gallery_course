<div class="hero-unit">
  <h1>Usun Zdjecie</h1>

  <%= form_for(:zdjecie, :url => {:action => 'kasuj', :id =>@zdjecie.id, :galerie_id => @galerie.id}) do |pole| %>
      <p>Czy napewno mam usunąc zdjecie?</p>
      <p class="text-warning"><%= @zdjecie.nazwa %></p>

      <p class="text-warning"><%= image_tag( @zdjecie.zdjecie) %></p>

      <div style="text-align: center;">
        <%= link_to 'Back', {:action => 'index', :galerie_id => @galerie.id}, :class => 'btn btn-primary'%>
